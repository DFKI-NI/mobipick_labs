<?xml version="1.0"?>
<launch>
  <arg name="simulation" default="false" />
  <arg name="objects_of_interest" value="[relay, screwdriver, multimeter, power_drill_with_grip, klt]"/>
  <arg name="dope_converter_config" default="$(find pbr_dope)/config/class_ids.yaml" />

  <!-- please run separately! : -->
  <!--roslaunch mobipick_bringup mobipick_bringup_both.launch -->

  <!-- 6D pose estimation and classification with deep learning -->
  <!--include file="$(find pbr_dope)/launch/dope.launch"-->

  <!-- MoveIt macros -->
  <include file="$(find robot_api)/launch/moveit_macros.launch">
    <arg name="namespace" value="mobipick" />
  </include>

  <group if="$(arg simulation)">
    <!-- pose selector: DB to store object poses -->
    <node pkg="pose_selector" type="pose_selector_node" name="pose_selector_node" output="screen">
      <param name="debug" value="false" />
      <param name="global_reference_frame" value="map" />
      <rosparam param="objects_of_interest" subst_value="True">$(arg objects_of_interest)</rosparam>
    </node>

    <!-- force torque observer -->
    <node name="ft_observer" pkg="mobipick_pick_n_place" type="ft_observer_sim.py" ns="mobipick" output="screen" />
  </group>

  <group unless="$(arg simulation)">
    <!-- pose selector: DB to store object poses -->
    <node pkg="pose_selector" type="dope_converter_node" name="dope_converter_node" output="screen">
      <remap from="/dope_output" to="/mobipick/dope/detected_objects" />
      <rosparam command="load" file="$(arg dope_converter_config)" />
    </node>
    <node pkg="pose_selector" type="pose_selector_node" name="pose_selector_node" output="screen">
      <remap from="/mobipick/gripper_astra/rgb/logical_image" to="/dope_converter_poses" />
      <remap from="/mobipick/dope/detected_objects" to="/dope_converter_poses"/>
      <param name="debug" value="false" />
      <param name="global_reference_frame" value="map" />
      <rosparam param="objects_of_interest" subst_value="True">$(arg objects_of_interest)</rosparam>
    </node>

    <!-- force torque observer -->
    <node name="ft_observer" pkg="mobipick_pick_n_place" type="ft_observer.py" ns="mobipick" output="screen"/>
  </group>

  <!-- ::::: Grasp planning ::::: -->

  <!-- visualise grasps ( draws multiple brown grippers :1 per grasp ; as mesh in rviz using visualisation marker array ) -->
  <node pkg="grasplan" type="rviz_gripper_visualiser.py" name="rviz_gripper_visualiser" output="screen">
    <param name="global_reference_frame" type="string" value="map" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/gripper_open_transformations.yaml" command="load" ns="gripper_transformations"/>
    <remap from="pose_array" to="/mobipick/pick_object_node/grasp_poses"/>
  </node>
  <!-- pick object script using handcoded grasp planner
       (grasps  defined manually using grasp editor or recorded via gazebo zero gravity environment) -->
  <node pkg="grasplan" type="pick.py" name="pick_object_node" output="screen" ns="mobipick" >
    <param name="import_file" type="string" value="grasplan.grasp_planner.handcoded_grasp_planner" />
    <param name="import_class" type="string" value="HandcodedGraspPlanner" />
    <param name="pose_selector_activate_srv_name" type="string" value="/pick_pose_selector_node/pose_selector_activate" />
    <param name="pose_selector_class_query_srv_name" type="string" value="/pick_pose_selector_node/pose_selector_class_query" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/pick_params.yaml" command="load" />
    <rosparam file="$(find tables_demo_bringup)/config/tables_planning_scene.yaml" command="load" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/grasp_planning_core_params.yaml" command="load" />
    <!-- allows to specify how much the gripper should close per object -->
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/object_grasps/gripper_distance_values_per_object.yaml" command="load" />
    <!-- pregrasp planner parameters -->
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/object_grasps/handcoded_grasp_planner_relay.yaml"
              command="load" ns="handcoded_grasp_planner_transforms" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/object_grasps/handcoded_grasp_planner_screwdriver.yaml"
              command="load" ns="handcoded_grasp_planner_transforms" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/object_grasps/handcoded_grasp_planner_multimeter.yaml"
              command="load" ns="handcoded_grasp_planner_transforms" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/object_grasps/handcoded_grasp_planner_klt.yaml"
              command="load" ns="handcoded_grasp_planner_transforms" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/object_grasps/handcoded_grasp_planner_power_drill_with_grip.yaml"
              command="load" ns="handcoded_grasp_planner_transforms" />
  </node>

  <!-- ::::: Place object ::::: -->

  <!--place object wrapper node-->
  <node pkg="grasplan" type="place.py" name="place_object_node" output="screen" ns="mobipick" >
    <param name="pose_selector_activate_srv_name" value="/place_pose_selector_node/pose_selector_activate" />
    <rosparam file="$(find mobipick_pick_n_place)/config/grasplan/place_params.yaml" command="load" />
  </node>

  <!-- a second pose selector for storing place poses -->
  <node pkg="pose_selector" type="pose_selector_node" name="place_pose_selector_node" output="screen" >
    <param name="debug" value="false" />
    <param name="global_reference_frame" value="map" />
    <rosparam param="objects_of_interest" subst_value="True">$(arg objects_of_interest)</rosparam>
    <remap from="/mobipick/gripper_astra/rgb/logical_image" to="/mobipick/place_object_node/place_poses"/>
  </node>

  <!-- visualisation of placing poses (they show in magenta color) -->
  <arg name="object_color_rgba_place" value="[1,0,1,1]"/>
  <node pkg="grasplan" type="pose_selector_visualiser.py" name="place_pose_selector_visualiser" output="screen">
    <remap from="pose_selector_objects" to="place_pose_selector_objects"/> <!-- marker array topic name, meshes are published on this topic -->
    <param name="object_pkg" type="string" value="mobipick_gazebo" />
    <param name="pose_selector_query_srv_name" value="/place_pose_selector_node/pose_selector_class_query" />
    <rosparam param="object_color_rgba" subst_value="True">$(arg object_color_rgba_place)</rosparam>
    <rosparam param="objects_of_interest" subst_value="True">$(arg objects_of_interest)</rosparam>
  </node>

</launch>
